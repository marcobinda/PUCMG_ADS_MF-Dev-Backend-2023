@model MF_Dev_Backend_2023.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover usuário</h1>

<h3>Você tem certeza que deseja remover este registro?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-info">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
